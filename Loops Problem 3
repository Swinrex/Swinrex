using System;
					
public class Program
{
	public static void Main()
	{
		for(int i = 10; i > 0; i--)
           {
			if (i % 2 == 0)
		   {
               Console.WriteLine("Counting Down: "+ i + " and the number is even");
           }
		    else 
		   {
			   Console.WriteLine("Counting Down: "+ i + " and the number is odd");
		   }
	}
	
}
}
